syntax on
filetype on
filetype plugin on
filetype indent on

set ttyfast
set et
set background=dark
set bs=2
set ts=4
set sw=4
set ruler
set nowrap
set nohlsearch
set hidden
let mapleader = ","
set history=1000
set scrolloff=3
set number
set cc=78

let loaded_matchparen=1
set spell spelllang=en_us
set spellfile=~/.spell.utf8.add

hi Normal guifg=gray guibg=black
set guifont=Lucida_Console:h14:cDEFAULT

set smarttab

set foldmethod=indent
set foldlevel=1000

set list listchars=tab:>-,trail:.,extends:>

" new
set smartindent
set showmode
